{% trans_default_domain 'FOSUserBundle' %}


{{ form_start(form, {'method': 'post', 'action': path('registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
{# Les erreurs générales du formulaire. #}
{{ form_errors(form) }}

<form>
    <div class="form-group">
        {{ form_label(form.email, "Adresse E-mail ", {'label_attr': {}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.username, "Nom d'utilisateur ", {'label_attr': {}}) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.plainPassword.first, "Mot de passe", {'label_attr': {}}) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.plainPassword.second, "Confirmation de mot de passe", {'label_attr': {}}) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.lastName, "Nom", {'label_attr': {}}) }}
        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.firstName, "Prénom", {'label_attr': {}}) }}
        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.adresse, "Adresse", {'label_attr': {}}) }}
        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.ville, "Ville", {'label_attr': {}}) }}
        {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.codepostale, "Code Postale", {'label_attr': {}}) }}
        {{ form_widget(form.codepostale, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div>               
        <input type="submit" class="btn btn-primary btn-sm" value="{{ 'registration.submit'|trans }}" />
    </div>
    {{ form_end(form) }}

</form>